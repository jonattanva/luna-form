                    "validation": {
                        "required": "Name is required"
                    }
                },
                {
                    "label": "Default value",
                    "name": "value",
                    "type": "input/text",
                    "description": "Initial value for the field"
                },
                {
                    "label": "Autocomplete",
                    "name": "advanced.autocomplete",
                    "type": "select",
                    "source": [
                        {
                            "label": "Off",
                            "value": "off"
                        },
                        {
                            "label": "On",
                            "value": "on"
                        },
                        {
                            "label": "Name",
                            "value": "name"
                        },
                        {
                            "label": "Email",
                            "value": "email"
                        },
                        {
                            "label": "Username",
                            "value": "username"
                        },
                        {
                            "label": "Current password",
                            "value": "current-password"
                        },
                        {
                            "label": "New password",
                            "value": "new-password"
                        }
