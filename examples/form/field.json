{
    "sections": [
        {
            "compact": true,
            "fields": [
                {
                    "type": "column",
                    "advanced": {
                        "cols": 3
                    },
                    "fields": [
                        {
                            "advanced": {
                                "cols": 2
                            },
                            "label": "Label",
                            "name": "label",
                            "type": "input/text",
                            "required": true,
                            "validation": {
                                "required": "Label is required"
                            }
                        },
                        {
                            "advanced": {
                                "cols": 1
                            },
                            "label": "Type",
                            "name": "type",
                            "type": "select",
                            "source": [
                                {
                                    "label": "Text",
                                    "value": "input/text"
                                },
                                {
                                    "label": "Email",
                                    "value": "input/email"
                                },
                                {
                                    "label": "Number",
                                    "value": "input/number"
                                },
                                {
                                    "label": "Password",
                                    "value": "input/password"
                                },
                                {
                                    "label": "Date",
                                    "value": "input/date"
                                },
                                {
                                    "label": "Textarea",
                                    "value": "textarea"
                                },
                                {
                                    "label": "Select",
                                    "value": "select"
                                },
                                {
                                    "label": "Radio",
                                    "value": "radio"
                                },
                                {
                                    "label": "Checkbox",
                                    "value": "checkbox"
                                },
                                {
                                    "label": "Switch",
                                    "value": "checkbox/switch"
                                }
                            ],
                            "required": true,
                            "validation": {
                                "required": "Type is required"
                            },
                            "event": {
                                "change": [
                                    {
                                        "action": "state",
                                        "target": "advanced.preselected",
                                        "state": {
                                            "hidden": false
                                        },
                                        "when": {
                                            "value": "select",
                                            "operator": "eq"
                                        }
                                    },
                                    {
                                        "action": "state",
                                        "target": "advanced.reverse",
                                        "state": {
                                            "hidden": false
                                        },
                                        "when": [
                                            "radio",
                                            "checkbox",
                                            "checkbox/switch"
                                        ]
                                    },
                                    {
                                        "action": "state",
                                        "target": "validation.email",
                                        "state": {
                                            "hidden": false
                                        },
                                        "when": "input/email"
                                    },
                                    {
                                        "action": "state",
                                        "target": [
                                            "validation.length.min",
                                            "validation.length.max"
                                        ],
                                        "state": {
                                            "hidden": false
                                        },
                                        "when": [
                                            "input/text",
                                            "input/password",
                                            "textarea"
                                        ]
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "label": "Placeholder",
                    "name": "placeholder",
                    "type": "input/text"
                },
                {
                    "label": "Help text",
                    "name": "description",
                    "type": "textarea"
                },
                {
                    "advanced": {
                        "reverse": false
                    },
                    "label": "Mandatory field",
                    "name": "required",
                    "type": "checkbox/switch",
                    "description": "Users must fill this to submit the form",
                    "event": {
                        "change": [
                            {
                                "action": "state",
                                "target": "validation.required",
                                "state": {
                                    "hidden": false
                                },
                                "when": {
                                    "value": true,
                                    "operator": "eq"
                                }
                            }
                        ]
                    }
                },
                {
                    "advanced": {
                        "reverse": false
                    },
                    "label": "View only",
                    "name": "readonly",
                    "type": "checkbox/switch",
                    "description": "Prevent users from editing this value"
                }
            ]
        },
        {
            "title": "Advanced options",
