{
  "name": "luna-form",
  "description": "A monorepo for Luna, a form builder library based on JSON.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint . --cache",
    "prepare": "husky",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "serve": "pnpm --filter luna-editor dev",
    "test:e2e": "npx playwright test --grep '@e2e'",
    "test:e2e:ui": "playwright test --grep '@e2e' --ui",
    "test:unit": "npx playwright test --grep '@unit' --project=chromium",
    "typescript": "turbo run typescript"
  },
  "devDependencies": {
    "@playwright/test": "1.57.0",
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "@typescript-eslint/parser": "8.51.0",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "2.4.0",
    "globals": "16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "0.7.2",
    "turbo": "2.7.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.51.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonattanva/luna.git"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  }
}
