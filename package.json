{
  "name": "luna-form",
  "description": "A monorepo for Luna, a form builder library based on JSON.",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "prepare": "husky",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "serve": "pnpm --filter react-luna-editor dev",
    "test:e2e": "pnpm playwright test --grep '@e2e'",
    "test:e2e:ui": "pnpm playwright test --grep '@e2e' --ui",
    "test:unit": "pnpm playwright test --grep '@unit' --project=chromium",
    "typescript": "turbo run typescript"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/node": "25.2.2",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "esbuild": "0.27.3",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-playwright": "2.5.1",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "mitata": "1.0.34",
    "prettier": "3.8.1",
    "prettier-plugin-svelte": "3.4.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "turbo": "2.8.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonattanva/luna-form.git"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  }
}
