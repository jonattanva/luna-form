{
  "name": "react-luna-form",
  "version": "0.0.19",
  "description": "A React library for building forms based on JSON",
  "main": "./dist/client/cjs/index.js",
  "module": "./dist/client/esm/index.js",
  "types": "./dist/types/client/index.d.ts",
  "scripts": {
    "build": "node esbuild.mjs && pnpm run types",
    "dev": "node esbuild.mjs --watch",
    "lint": "eslint . --cache",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "types": "tsc --project tsconfig.json --declaration --emitDeclarationOnly --declarationDir dist/types",
    "typescript": "tsc --noEmit"
  },
  "type": "module",
  "sideEffects": false,
  "keywords": [
    "event",
    "forms",
    "json",
    "react",
    "validation"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "fast-equals": "^6.0.0",
    "jotai": "^2.0.0",
    "jotai-family": "^1.0.0",
    "react": "^18.2.0 || ^19.0.0",
    "react-dom": "^18.2.0 || ^19.0.0",
    "swr": "^2.3.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@luna-form/core": "workspace:*",
    "@types/react": "19.2.13",
    "@types/react-dom": "19.2.3",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.0"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonattanva/luna-form.git",
    "directory": "packages/luna-react"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/types/luna-react/src/client/index.d.ts",
      "import": "./dist/client/esm/index.js",
      "require": "./dist/client/cjs/index.js",
      "default": "./dist/client/cjs/index.js"
    },
    "./server": {
      "types": "./dist/types/luna-react/src/server/index.d.ts",
      "import": "./dist/server/esm/index.js",
      "require": "./dist/server/cjs/index.js",
      "default": "./dist/server/cjs/index.js"
    },
    "./config": {
      "types": "./dist/types/luna-react/src/config/index.d.ts",
      "import": "./dist/config/esm/index.js",
      "require": "./dist/config/cjs/index.js",
      "default": "./dist/config/cjs/index.js"
    }
  }
}
