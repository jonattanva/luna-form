{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "es2020",
    "verbatimModuleSyntax": true
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
