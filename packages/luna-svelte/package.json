{
  "name": "svelte-luna-form",
  "version": "0.0.1",
  "description": "A Svelte library for building forms based on JSON",
  "scripts": {
    "build": "svelte-package -i src -o dist",
    "dev": "svelte-package -i src -o dist --watch",
    "lint": "eslint . --cache",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typescript": "svelte-check --tsconfig ./tsconfig.json"
  },
  "type": "module",
  "sideEffects": false,
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "event",
    "forms",
    "json",
    "svelte",
    "validation"
  ],
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@luna-form/core": "workspace:*",
    "@sveltejs/package": "2.5.7",
    "@sveltejs/vite-plugin-svelte": "6.2.4",
    "eslint-plugin-svelte": "3.14.0",
    "svelte": "5.49.2",
    "svelte-check": "4.3.6",
    "typescript": "5.9.3"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonattanva/luna-form.git",
    "directory": "packages/luna-svelte"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  }
}
